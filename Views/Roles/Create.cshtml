@model Newfactjo.Models.Role
@{
    ViewData["Title"] = "إضافة دور";
}

<h2>إضافة دور جديد</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="Name">اسم الدور</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">حفظ</button>
    <a href="/Roles" class="btn btn-secondary mt-2">رجوع</a>
</form>
