@model IEnumerable<Newfactjo.Models.Advertisement>

@{
    ViewData["Title"] = "إدارة الإعلانات";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">إضافة إعلان جديد</a>
    <a class="btn btn-info" asp-controller="HeaderPlaylist" asp-action="Index">إدارة بانوراما الأخبار المصورة</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>اسم الشريط</th>
            <th>العنوان</th>
            <th>الوصف</th>
            <th>نوع الإعلان</th>
            <th>مفعل</th>
            <th>تغيير الحالة</th>
            <th>تاريخ الإضافة</th>
            <th>إجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ad in Model)
        {
            <tr>
                <td>@ad.AdBarName</td>
                <td>@ad.Title</td>
                <td>@ad.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(ad.VideoUrl))
                    {
                        <span>فيديو</span>
                    }
                    else if (!string.IsNullOrEmpty(ad.ImageUrl))
                    {
                        <span>صورة</span>
                    }
                    else if (!string.IsNullOrEmpty(ad.Description))
                    {
                        <span>نص</span>
                    }
                    else
                    {
                        <span>غير محدد</span>
                    }
                </td>
                <td>@(ad.IsActive ? "نعم" : "لا")</td>
                <td>
                    <form asp-action="ToggleActive" method="post">
                        <input type="hidden" name="id" value="@ad.Id" />
                        <button type="submit" class="btn btn-sm @(ad.IsActive ? "btn-secondary" : "btn-success")">
                            @(ad.IsActive ? "تعطيل" : "تفعيل")
                        </button>
                    </form>
                </td>
                <td>@ad.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ad.Id" class="btn btn-sm btn-warning">تعديل</a>
                    <a asp-action="Delete" asp-route-id="@ad.Id" class="btn btn-sm btn-danger">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
