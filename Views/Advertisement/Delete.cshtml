@model Newfactjo.Models.Advertisement

@{
    ViewData["Title"] = "حذف الإعلان";
}

<h2>@ViewData["Title"]</h2>

<h4>هل أنت متأكد من حذف الإعلان التالي؟</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">اسم الشريط الإعلاني</dt>
        <dd class="col-sm-10">@Model.AdBarName</dd>

        <dt class="col-sm-2">العنوان</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">الوصف</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">صورة الإعلان</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Title" style="max-width: 300px;" />
            }
        </dd>

        <dt class="col-sm-2">فيديو الإعلان</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.VideoUrl))
            {
                <video width="300" controls>
                    <source src="@Model.VideoUrl" type="video/mp4" />
                    متصفحك لا يدعم عرض الفيديو.
                </video>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">حذف</button>
        <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
    </form>
</div>
