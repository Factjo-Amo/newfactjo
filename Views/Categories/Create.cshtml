@model Newfactjo.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- ✅ هذا هو الحقل الجديد -->
            <div class="form-group form-check mt-2">
                <input type="checkbox" class="form-check-input" asp-for="ShowInTopBar" />
                <label class="form-check-label" asp-for="ShowInTopBar">إظهار في الشريط العلوي</label>
            </div>

            <span asp-validation-for="ShowInTopBar" class="text-danger"></span>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
