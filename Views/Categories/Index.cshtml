@model IEnumerable<Newfactjo.Models.Category>

@{
    ViewData["Title"] = "التصنيفات";
    var adminRole = Context.Session.GetString("AdminRole");
}

<h1>التصنيفات</h1>

@if (adminRole == "SuperAdmin" || adminRole == "Admin" || adminRole == "مدير التحرير")
{
    <p>
        <a asp-action="Create" class="btn btn-primary mb-3">➕ إضافة تصنيف جديد</a>
    </p>
}

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="News" asp-action="ByCategory" asp-route-id="@item.Id"
                       class="text-decoration-none text-dark fw-bold">
                        @item.Name
                    </a>
                </td>

                <td>
                    <a asp-controller="News" asp-action="ByCategory" asp-route-id="@item.Id" class="btn btn-sm btn-info me-2">
                        عرض الأخبار
                    </a>

                    @if (adminRole == "SuperAdmin" || adminRole == "Admin" || adminRole == "مدير التحرير")
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2">تعديل</a>
                    }

                    @if (adminRole == "SuperAdmin" )
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger me-2">حذف</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
