@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // أو null إن كانت الصفحة مستقلة
    ViewData["Title"] = "قناة الحقيقة الدولية - نبض";
}

<style>
    .header {
        background-color: #f8f8f8;
        padding: 15px 0;
    }

    .header-btn {
        background-color: #d8232a;
        color: #fff;
        padding: 10px 20px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: bold;
    }

    .header-text {
        text-align: right;
    }

    .header-title {
        font-size: 20px;
        font-weight: bold;
    }

    .header-subtitle {
        font-size: 14px;
        color: #888;
    }

    .header-logo img {
        border-radius: 50%;
    }

    .source-logo img {
        width: 120px;
        border-radius: 50%;
    }

    .source-name {
        font-size: 24px;
        font-weight: bold;
        margin-top: 10px;
    }

    .source-followers {
        font-size: 16px;
        color: #777;
        margin-bottom: 10px;
    }

    .follow-btn {
        background-color: #d8232a;
        color: #fff;
        padding: 10px 30px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: bold;
    }

    .follow-message {
        margin-top: 20px;
        font-size: 16px;
        color: #444;
    }

    .store-badges img {
        height: 40px;
        margin: 10px;
    }
</style>

<body>
    <div class="container-fluid">
        <div class="row align-items-center header">
            <div class="col float-left">
                <a class="header-btn" href="https://nabdapp.com/download/">حمل التطبيق مجانا</a>
            </div>
            <div class="col float-right header-text">
                <div class="row float-right header-title">تطبيق نبض الإخباري</div>
                <br>
                <div class="row float-right header-subtitle">متوفر للأيفون والأندرويد</div>
            </div>
            <div class="col-auto header-logo">
                <img src="https://dj330ir5oidfe.cloudfront.net/source_profile/images/icon.png" width="50" height="50">
            </div>
        </div>
    </div>

    <hr style="margin:0;">

    <div class="container text-center">
        <div class="source-logo">
            <img src="https://pbs.twimg.com/profile_images/1810935405342003200/sy35CLgn_400x400.jpg">
        </div>
        <div class="source-name">قناة الحقيقة الدولية</div>
        <div class="source-followers" dir="rtl">1,070,702 مُتابع</div>
        <a class="follow-btn" href="#" onclick="openSourceOrStore(); return false;">تابع قناة الحقيقة الدولية في تطبيق نبض</a>
        <div class="follow-message">
            <p>تابع أخبار قناة الحقيقة الدولية وانضم الآن لملايين المستخدمين لتطبيق نبض</p>
        </div>
        <div class="store-badges">
            <a href="https://itunes.apple.com/us/app/nbd/id569532697?ls=1&amp;mt=8"><img src="https://dj330ir5oidfe.cloudfront.net/source_profile/images/app_store_badge_s.png" class="itunes-badge"></a>
            <a href="https://play.google.com/store/apps/details?id=com.waveline.nabd"><img src="https://dj330ir5oidfe.cloudfront.net/source_profile/images/google_badge_s.png" class="google-badge"></a>
        </div>
        <br><br>
    </div>

    <script>
        function openSourceOrStore() {
            window.open("https://nabd.com/factjosocial", "_blank");
        }
    </script>
</body>
