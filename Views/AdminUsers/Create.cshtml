@model Newfactjo.Models.AdminUser

@{
    ViewData["Title"] = "إضافة مستخدم جديد";
}

<h2 class="mb-4 text-primary text-center">➕ إضافة مستخدم جديد</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label fw-bold"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label fw-bold"></label>
                @Html.DropDownListFor(model => model.Role, (SelectList)ViewBag.RoleList, "اختر نوع الصلاحية", new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
            </div>



            <button type="submit" class="btn btn-primary">💾 حفظ</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">↩️ إلغاء</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
