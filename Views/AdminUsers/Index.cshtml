@model List<Newfactjo.Models.AdminUser>

@{
    ViewData["Title"] = "إدارة المستخدمين";
}

<h2 class="mb-4 text-center text-primary">👥 إدارة المستخدمين</h2>

<div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-success">
        ➕ إضافة مستخدم جديد
    </a>
</div>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered table-striped text-center">
        <thead class="table-dark">
            <tr>
                <th>اسم المستخدم</th>
                <th>نوع الصلاحية</th>
                <th>إجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Role.ToString()</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning me-1">تعديل</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted text-center">لا يوجد مستخدمون بعد.</p>
}
