@model Newfactjo.Models.Article

@{
    ViewData["Title"] = "تفاصيل المقال";
}

<div class="container my-5">
    <div class="row g-4">
        <!-- عمود الكاتب -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm text-center p-3">
                <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : "/images/default-author.jpg")"
                     class="img-fluid rounded-circle mx-auto mb-3"
                     style="width: 160px; height: 160px; object-fit: cover; border: 4px solid #f0f0f0; box-shadow: 0 2px 6px rgba(0,0,0,0.2);"
                     alt="@Model.Author" />

                <h5 class="text-danger fw-bold">@Model.Author</h5>
                <p class="text-muted mb-0">
                    @(string.IsNullOrEmpty(Model.AuthorBio) ? "كاتب في موقعنا الإخباري" : Model.AuthorBio)
                </p>
            </div>
        </div>

        <!-- عمود المقال -->
        <div class="col-md-8">
            <div class="card border-0 shadow-sm p-4">
                <h2 class="fw-bold mb-3">@Model.Title</h2>
                <p class="text-muted mb-2"><i class="far fa-calendar-alt me-1"></i> @Model.PublishedDate.ToString("dd/MM/yyyy")</p>
                <hr />
                <p class="lead" style="line-height: 1.9; text-align: justify;">
                    @Model.Content
                </p>

                <div class="mt-4 d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        <i class="fas fa-edit me-1"></i> تعديل
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> رجوع
                    </a>
