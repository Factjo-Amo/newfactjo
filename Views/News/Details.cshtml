@model Newfactjo.Models.News

@{
    ViewData["Title"] = "تفاصيل الخبر";
    var userRole = Context.Session.GetString("UserRole"); // قراءة دور المستخدم من الجلسة

    string? videoUrl = Model.VideoUrl;
    string? embedUrl = null;

    if (!string.IsNullOrEmpty(videoUrl))
    {
        if (videoUrl.Contains("youtube.com/watch?v="))
        {
            var videoId = videoUrl.Split("watch?v=").LastOrDefault()?.Split('&').FirstOrDefault();
            embedUrl = $"https://www.youtube.com/embed/{videoId}";
        }
        else if (videoUrl.Contains("youtu.be/"))
        {
            var videoId = videoUrl.Split("youtu.be/").LastOrDefault()?.Split('?').FirstOrDefault();
            embedUrl = $"https://www.youtube.com/embed/{videoId}";
        }
    }
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="card-title text-danger mb-3">@Model.Title</h2>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="صورة الخبر" class="card-img-top rounded-top" style="max-height: 400px; object-fit: cover;" />
                }

                

                    <div class="mb-3 text-muted d-flex justify-content-between align-items-center">
                        <small>نُشر بتاريخ: @Model.PublishedDate?.ToString("dddd، dd MMMM yyyy")</small>
                        <small>الكاتب: @Model.Author</small>
                    </div>

                    <p class="card-text fs-5 lh-lg">
                        @Html.Raw(Model.Content?.Replace("\n", "<br />"))
                    </p>

                    @if (Model.Images != null && Model.Images.Any())
                    {
                        <hr />
                        <h5 class="text-primary mb-3">📸 صور إضافية</h5>
                        <div class="row">
                            @foreach (var img in Model.Images)
                            {
                                <div class="col-6 col-md-4 col-lg-3 mb-3">
                                    <img src="@img.ImagePath" class="img-fluid rounded shadow-sm border" alt="صورة إضافية" style="max-height: 200px; object-fit: cover;" />
                                </div>
                            }
                        </div>
                    }

                    @* عرض الفيديو حسب وجود البيانات *@
                    @if (!string.IsNullOrEmpty(Model.VideoFilePath))
                    {
                        <hr />
                        <h5 class="text-primary mb-3">🎬 فيديو الخبر</h5>
                        <video width="100%" controls>
                            <source src="@Model.VideoFilePath" type="video/mp4" />
                            المتصفح الخاص بك لا يدعم عرض الفيديو.
                        </video>
                    }
                    else if (!string.IsNullOrEmpty(videoUrl))
                    {
                        <hr />
                        <h5 class="text-primary mb-3">🎬 فيديو من الرابط</h5>

                        @if (!string.IsNullOrEmpty(embedUrl))
                        {
                            <div class="ratio ratio-16x9">
                                <iframe style="width:100%; height:400px;" src="@embedUrl" title="فيديو يوتيوب" frameborder="0" allowfullscreen></iframe>
                            </div>
                        }
                        else
                        {
                            <a href="@videoUrl" target="_blank">@videoUrl</a>
                        }
                    }
                    else if (!string.IsNullOrEmpty(Model.VideoEmbedCode))
                    {
                        <hr />
                        <h5 class="text-primary mb-3">🎬 فيديو مضمّن</h5>
                        @Html.Raw(Model.VideoEmbedCode)
                    }
                </div>

                <div class="card-footer bg-white text-end">
                    @if (userRole == "Admin" || userRole == "Editor")
                    {
                        <a asp-controller="News" asp-action="Index" class="btn btn-outline-secondary">العودة إلى الأخبار</a>
                    }
                    else
                    {
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">العودة إلى الرئيسية</a>
                    }
                    @{
                        var similarNews = ViewBag.SimilarNews as List<Newfactjo.Models.News>;
                    }

                    @if (similarNews != null && similarNews.Any())
                    {
                        <hr class="my-5" />
                        <h3 class="text-danger fw-bold mb-4">📰 أخبار مشابهة</h3>

                        <div class="row g-4">
                            @foreach (var item in similarNews)
                            {
                                <div class="col-12 col-sm-6 col-lg-3">
                                    <div class="card h-100 border-0 shadow-sm rounded overflow-hidden">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <a asp-controller="News" asp-action="Details" asp-route-id="@item.Id">
                                                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title"
                                                     style="height: 160px; object-fit: cover;" />
                                            </a>
                                        }

                                        <div class="card-body p-3 d-flex flex-column">
                                            <h6 class="card-title fw-bold text-dark text-truncate mb-3">
                                                <a asp-controller="News" asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                                                    @item.Title
                                                </a>
                                            </h6>

                                            <div class="mt-auto">
                                                <a asp-controller="News" asp-action="Details" asp-route-id="@item.Id"
                                                   class="btn btn-outline-primary btn-sm w-100">
                                                    عرض الخبر
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
